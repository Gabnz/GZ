{# plantilla base de foundation sobre la cual se va a trabajar#}

<!DOCTYPE html>
<!--[if IE 8]>         <html class="no-js lt-ie9" lang="es"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js" lang="es"> <!--<![endif]-->

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width" />
  <title>{% block title %}Bienvenido!{% endblock %}</title>
  
  {% block stylesheets %}{% endblock %}

  {# bloque de icono de la aplicacion #}
  
  {% block icon %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
  {% endblock %}

  <!-- If you are using CSS version, only link these 2 files, you may add app.css to use for your overrides if you like. -->
  <link rel="stylesheet" href="{{ asset('bundles/foundation-4.3.2/css/normalize.css') }}" />
  <link rel="stylesheet" href="{{ asset('bundles/foundation-4.3.2/css/foundation.css') }}" />

  <link rel="stylesheet" href="{{ asset('bundles/CreativeButtons/css/default.css') }}" />
  <link rel="stylesheet" href="{{ asset('bundles/CreativeButtons/css/component.css') }}" />
  <script src="{{ asset('bundles/CreativeButtons/js/modernizr.custom.js') }}" ></script>
  

  <!-- If you are using the gem version, you need this only -->
  <link rel="stylesheet" href="css/app.css" />

  <script src="{{ asset('bundles/foundation-4.3.2/js/vendor/custom.modernizr.js') }}"></script>

  <style>
    {% block style %}{% endblock %}
  </style>

</head>
<body>

  {% block body %}{% endblock %}
 
  <script>
  document.write("<script src={{ asset('bundles/foundation-4.3.2/js/vendor/" +
  ("__proto__" in {} ? "zepto" : "jquery") +
  ".js') }}><\/script>")
  </script>
  
  <script src="{{ asset('bundles/CreativeButtons/js/classie.js') }}" ></script>
  <script src="{{ asset('bundles/CreativeButtons/js/modernizr.custom.js') }}" ></script>
  
  <script src="{{ asset('bundles/foundation-4.3.2/js/foundation/foundation.js') }}"></script>
  <script src="{{ asset('bundles/foundation-4.3.2/js/foundation/foundation.alerts.js') }}"></script>
  <script src="{{ asset('bundles/foundation-4.3.2/js/foundation/foundation.clearing.js') }}"></script>
  <script src="{{ asset('bundles/foundation-4.3.2/js/foundation/foundation.cookie.js') }}"></script>
  <script src="{{ asset('bundles/foundation-4.3.2/js/foundation/foundation.dropdown.js') }}"></script>
  <script src="{{ asset('bundles/foundation-4.3.2/js/foundation/foundation.forms.js') }}"></script>
  <script src="{{ asset('bundles/foundation-4.3.2/js/foundation/foundation.joyride.js') }}"></script>
  <script src="{{ asset('bundles/foundation-4.3.2/js/foundation/foundation.magellan.js') }}"></script>
  <script src="{{ asset('bundles/foundation-4.3.2/js/foundation/foundation.orbit.js') }}"></script>
  <script src="{{ asset('bundles/foundation-4.3.2/js/foundation/foundation.placeholder.js') }}"></script>
  <script src="{{ asset('bundles/foundation-4.3.2/js/foundation/foundation.reveal.js') }}"></script>
  <script src="{{ asset('bundles/foundation-4.3.2/js/foundation/foundation.section.js') }}"></script>
  <script src="{{ asset('bundles/foundation-4.3.2/js/foundation/foundation.tooltips.js') }}"></script>
  <script src="{{ asset('bundles/foundation-4.3.2/js/foundation/foundation.topbar.js') }}"></script>
  <script src="{{ asset('bundles/foundation-4.3.2/js/foundation/foundation.interchange.js') }}"></script>
  <script>
    $(document).foundation();
  </script>
 {% block javascripts %}{% endblock %}
</body>
</html>
