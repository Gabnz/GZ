{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Reserve</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Childbeds</th>
                <td>{{ entity.childbeds }}</td>
            </tr>
            <tr>
                <th>Entrydate</th>
                <td>{{ entity.entrydate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Exitdate</th>
                <td>{{ entity.exitdate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Roomcategory</th>
                <td>{{ entity.roomcategory }}</td>
            </tr>
            <tr>
                <th>Roomtype</th>
                <td>{{ entity.roomtype }}</td>
            </tr>
            <tr>
                <th>Roomstatus</th>
                <td>{{ entity.roomstatus }}</td>
            </tr>
            <tr>
                <th>Special</th>
                <td>{{ entity.special }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('reserve') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('reserve_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
