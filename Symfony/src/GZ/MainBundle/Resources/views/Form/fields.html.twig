{#Da formato personalizado al renderizado de los formularios#}

{% block form_row %}
{% spaceless %}
	{{ form_label(form) }}
	{{ form_widget(form) }}
	{{ form_errors(form) }}
{% endspaceless %}
{% endblock form_row %}

{% block form_errors %}
{% spaceless %}
    {% if errors|length > 0 %}
    <small class="error" style="margin-top:-20px;">
        {% for error in errors %}
            {{ error.message }}
        {% endfor %}
    </small>
    {% endif %}
{% endspaceless %}
{% endblock form_errors %}