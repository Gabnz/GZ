{#formulario para hacer login#}
<div id="log-div" style="width:100%; height:60%">
	<div class="small-6 columns" style="width:100%; height:30%;">
		<h1 align="center" style="position: absolute; width:100%; bottom: 0; text-align: center;">Login</h1>
	</div>
	<div class="small-5 small-centered columns">
		<form method="post" action="{{ path('loginattempt') }}" id="log-form">
			<div class="row">
				<div class="small-12 columns">

	        		<div class="row collapse">
	        			<div class="small-4 columns">
	        				<span class="prefix">
	        					<h4>{{ form_label(form.email) }}</h4>
	        				</span>
						</div>
						<div class="small-8 columns">
							{{ form_widget(form.email) }}
						</div>
						{{ form_errors(form.email) }}
					</div>

					<div class="row collapse">
	        			<div class="small-4 columns">
	        				<span class="prefix">
	        					<h4>{{ form_label(form.pass) }}</h4>
	        				</span>
						</div>
						<div class="small-8 columns">
							{{ form_widget(form.pass) }}
						</div>
						{{ form_errors(form.pass) }}
					</div>

					{{ form_rest(form) }}
					<div class="small-4 small-centered columns">
						<a class="button" id="log-send-button">Ingresar</a>
					</div>
	      		</div>
	      	</div>
		</form>
	</div>
</div>