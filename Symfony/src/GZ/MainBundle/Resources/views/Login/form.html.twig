{#formulario para hacer login#}
<div id="log-div" style="width:100%; height:100%">
	<div class="small-6 columns" style="width:100%; height:30%;">
		<h1 align="center" style="position: absolute; width:100%; bottom: 0; text-align: center;">Login</h1>
	</div>

	{% form_theme form 'GZMainBundle:Form:fields.html.twig' %}

	<div class="small-5 small-centered columns">
		<form method="post" action="{{ path('loginattempt') }}" id="log-form">
			<div class="row">
				<div class="small-12 columns">
					{{ form_row(form.email) }}
				</div>
				<div class="small-12 columns">
					{{ form_row(form.pass) }}
				</div>
			</div>
			{{ form_rest(form) }}
			<div class="row">
				<div class="small-4 small-centered columns">
					<a class="button" id="log-send-button">Ingresar</a>
				</div>
	      	</div>
		</form>
	</div>
</div>