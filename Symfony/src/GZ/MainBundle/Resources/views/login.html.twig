
	<form method="post" action="{{ path('login') }}" id="log-form">
		<div class="row" id="form-content">

			<div class="large-12 columns">&nbsp;</div>
			<h3 class="subheader">Login</h3>

			<div class="large-10 large-centered columns">

        		<div class="row collapse">
        			<div class="large-4 columns">
        				<span class="prefix">
        					<h4>{{ form_label(form.email) }}</h4>
        				</span>
					</div>
					<div class="large-8 columns">
						{{ form_widget(form.email) }}
					</div>
					{{ form_errors(form.email) }}
				</div>

				<div class="row collapse">
        			<div class="large-4 columns">
        				<span class="prefix">
        					<h4>{{ form_label(form.pass) }}</h4>
        				</span>
					</div>
					<div class="large-8 columns">
						{{ form_widget(form.pass) }}
					</div>
					{{ form_errors(form.pass) }}
				</div>

				{{ form_rest(form) }}

				<a class="button" id="log-send-button">Ingresar</a>
      		</div>
      	</div>
	</form>
