{% extends 'HotelMainBundle:Main:layout.html.twig' %}

{% block body -%}
<div class="cover-div"
    style="background-image:url({{ asset('bundles/img/reservations.jpg') }});">
</div>

{#{ include('HotelUserBundle:User:user-topbar.html.twig') }#}
{{ include('HotelUserBundle:User:user-topbar.html.twig') }}


<div class="title-div">
    <h1>Lista de Habitaciones</h1>
</div>

<div align="center">

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Tipo</th>
                <th>Categoria</th>
                <th>Tv</th>
                <th>Ba√±o</th>
                <th>Jacuzzi</th>
                <th>Musica</th>
                <th>Masaje</th>
                <th>Estatus</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('room_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.roomtype }}</td>
                <td>{{ entity.roomcategory }}</td>
                <td>{{ entity.tv }}</td>
                <td>{{ entity.shower }}</td>
                <td>{{ entity.jacuzzi }}</td>
                <td>{{ entity.music }}</td>
                <td>{{ entity.massage }}</td>
                <td>{{ entity.roomstatus }}</td>
                <td>
                <ul class="button-group">
                    <li>
                        <a href="{{ path('room_show', { 'id': entity.id }) }}" class="button small">mostrar</a>
                    </li>
                    <li>
                        <a href="{{ path('room_edit', { 'id': entity.id }) }}" class="button small">editar</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>    

<div align="center">
    <a href="{{ path('room_new') }}" class="button">
        Registrar nueva habitacion
    </a>
</div>

    {% endblock %}
