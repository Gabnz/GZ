{% extends 'HotelMainBundle:Main:layout.html.twig' %}

{% block body -%}
<div class="cover-div"
    style="background-image:url({{ asset('bundles/img/reservations.jpg') }});">
</div>

{{ include('HotelUserBundle:User:user-topbar.html.twig') }}

<div class="title-div">
    <h1>Habitacion</h1>
</div>

<div align="center">
    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Tipo</th>
                <td>{{ entity.roomtype }}</td>
            </tr>
            <tr>
                <th>Categoria</th>
                <td>{{ entity.roomcategory }}</td>
            </tr>
            <tr>
                <th>Tv</th>
                <td>{{ entity.tv }}</td>
            </tr>
            <tr>
                <th>Ba√±o</th>
                <td>{{ entity.shower }}</td>
            </tr>
            <tr>
                <th>Jacuzzi</th>
                <td>{{ entity.jacuzzi }}</td>
            </tr>
            <tr>
                <th>Musica</th>
                <td>{{ entity.music }}</td>
            </tr>
            <tr>
                <th>Masaje</th>
                <td>{{ entity.massage }}</td>
            </tr>
            <tr>
                <th>Estatus</th>
                <td>{{ entity.roomstatus }}</td>
            </tr>
        </tbody>
    </table>

    <div align="center">
        <a href="{{ path('room_edit', { 'id': entity.id }) }}" class="button">
            Editar
        </a>
        {{ form(delete_form) }}
    </div>

</div>
    <ul class="record_actions">
        <li>
            <a href="{{ path('room') }}">
                Regresar a la lista
            </a>
        </li>
    </ul>

{% endblock %}
