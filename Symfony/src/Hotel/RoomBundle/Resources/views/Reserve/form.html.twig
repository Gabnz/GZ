{#formulario para cada categoria#}
{{ form_start(form, {'attr': {novalidate: 'novalidate', 'class':'custom'}}) }}
{#<form class="custom" action="{{ path('reserve_user') }}" method="post" id="res-form">#}
	{% form_theme form 'HotelRoomBundle:Form:fields.html.twig' %}
	<div class="row">
		
		<div class="small-4 columns">
			<div class="row">
				<div class="small-8 small-centered columns">
					{{ form_row(form.entrydate) }}
				</div>
			</div>
			<div class="row">
				<div class="small-8 small-centered columns">
					{{ form_row(form.exitdate) }}
				</div>
			</div>
		</div>
		<div class="small-4 columns">
			<div class="row">
				<div class="small-6 small-centered columns">
					{{ form_row(form.roomtype) }}
				</div>
			</div>
			<div class="row">
				<div class="small-6 small-centered columns">
					{{ form_row(form.childbed) }}
				</div>
			</div>
		</div>

		
		<div class="small-4 columns">

			<div class="small-12 columns">&nbsp;</div>
			<div class="small-12 columns">&nbsp;</div>

			<div class="row collapse">
				<div class="small-5 push-2 columns">
					<a class="button prefix" >{{ form_row(form.available) }}</a>
				</div>
				<div class="small-3 pull-2 columns">
					<span class="postfix">-</span>
				</div>
			</div>
			
			<div class="small-12 columns">&nbsp;</div>

			<div align="center">
				{% if user != null %}
					{{ form_row(form.submit) }}
				{% else %}
					<h5 align="center">Ingresa a tu cuenta para reservar</h5>
				{% endif %}
			</div>
		</div> 
	</div>

{{ form_rest(form) }}
{{ form_end(form) }}
