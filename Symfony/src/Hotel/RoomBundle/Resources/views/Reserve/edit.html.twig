{% extends 'HotelMainBundle:Main:layout.html.twig' %}

{% block body -%}
<div class="cover-div"
    style="background-image:url({{ asset('bundles/img/login.jpg') }});">
</div>

{{ include('HotelUserBundle:User:user-topbar.html.twig') }}

<div class="title-div">
    <h1>Detalles de reservacion</h1>
</div>

{{ form_start(edit_form, {'attr': {novalidate: 'novalidate'}}) }}
	{% form_theme edit_form 'HotelRoomBundle:Form:fields.html.twig' %}

	<div class="row">
		<div class="small-12 medium-5 medium-centered columns">
			<div class="panel">
				<div class="row">
					<div class="small-6 medium-6 columns">
						<label>
							Usuario
						</label>
						{{ entity.user.email }}
					</div>
					<div class="small-6 medium-6 columns">
						<label>
							Id de usuario
						</label>
						<a href="{{ path('user_show', { 'id': entity.user.id }) }}">{{ entity.user.id }}</a>
					</div>
				</div>
				<br><br>
				<div class="row">
					<div class="small-6 medium-6 columns">
						<label>
							Fecha de entrada
						</label>
						{{ entity.entrydate|date('Y-m-d') }}
					</div>
					<div class="small-6 medium-6 columns">
						<label>
							Fecha de salida
						</label>
						{{ entity.exitdate|date('Y-m-d') }}
					</div>
				</div>
				<br><br>
				<div class="row">
					<div class="small-6 medium-6 columns">
						<label>
							Categoria
						</label>
						{% if entity.roomcategory == "standard" %}
                        	Estandar
	                    {% elseif entity.roomcategory == "bussiness" %}
	                        Bussiness
	                    {% else %}
	                        Alta
	                    {% endif %}
					</div>
					<div class="small-6 medium-6 columns">
						<label>
							Tipo
						</label>
						{% if entity.roomtype == "individual" %}
	                        Individual
	                    {% else %}
	                        Doble
	                    {% endif %}
					</div>
				</div>
				<br><br>
				<div class="row">
					<div class="small-6 medium-6 columns">
						<label>
							Id de habitacion
						</label>
						{% if entity.room is null %}
		                    ---
		                {% else %}
		                	{% if route == 'reserve_edit' %}
		                		{{ entity.room.id }}
		                	{% else %}
		                    	<a href="{{ path('room_show', { 'id': entity.room.id }) }}">{{ entity.room.id }}</a>
		                    {% endif %}
		                {% endif %}
					</div>
					<div class="small-6 medium-6 columns">
						<label>
							Cama infantil
						</label>
						{% if entity.childbed == false %}
	                        No
	                    {% else %}
	                        Si
	                    {% endif %}
					</div>
					
				</div>
				<br><br>
				<div class="row">
					<div class="small-6 medium-6 columns">
						<label>
							Caso especial
						</label>
						{% if entity.special == false %}
	                        No
	                    {% else %}
	                        Si
	                    {% endif %}
					</div>
					<div class="small-6 medium-6 columns">
						{{ form_row(edit_form.restatus) }}
					</div>
				</div>
			</div>
		</div>
	</div>

	<div align="center">
		{{ form_row(edit_form.submit) }}
	</div>
	{{ form_rest(edit_form) }}

{{ form_end(edit_form) }}

{% if message is defined %}
	<div class="row">
		<div class="small-12 medium-6 medium-centered columns">
			<div data-alert class="alert-box warning">
			  {{ message }}
			  <a href="#" class="close">&times;</a>
			</div>
		</div>
	</div>
{% endif %}

<div class="row">
    <div class="small-6 medium-4 columns">
    	{% if route == 'reserve_edit' %}
        	<a href="{{ path('reserve_userlist') }}" class="success button">
        {% else %}
        	<a href="{{ path('reserve_admin') }}" class="success button">
        {% endif %}
            Regresar
        </a>
    </div>
</div>
{% endblock %}
