{% extends 'HotelMainBundle:Main:layout.html.twig' %}

{% block body -%}
<div class="cover-div"
    style="background-image:url({{ asset('bundles/img/login.jpg') }});">
</div>

{{ include('HotelUserBundle:User:user-topbar.html.twig') }}

<div class="title-div">
    <h1>Editar reserva</h1>
</div>

{{ form_start(edit_form, {'attr': {novalidate: 'novalidate'}}) }}
	{% form_theme edit_form 'HotelRoomBundle:Form:fields.html.twig' %}

	<div class="row">
		<div class="small-12 medium-4 medium-centered columns">
			{{ form_row(edit_form.user) }}
		</dvi>
	</div>

	<div class="row">
		<div class="small-12 medium-6 medium-centered columns">
			<div class="row">
				<div class="small-12 medium-6 columns">
					{{ form_row(edit_form.entrydate) }}
				</div>
				<div class="small-12 medium-6 columns">
					{{ form_row(edit_form.exitdate) }}
				</div>
			</div>
			<div class="row">
				<div class="small-12 medium-6 columns">
					{{ form_row(edit_form.roomtype) }}
				</div>
				<div class="small-12 medium-6 columns">
					{{ form_row(edit_form.roomcategory) }}
				</div>
			</div>
			<div class="row">
				<div class="small-12 medium-6 columns">
					{{ form_row(edit_form.restatus) }}
				</div>
				<div class="small-12 medium-3 columns">
					<div align="center">
					{{ form_label(edit_form.special) }}
						{% if edit_form.special.vars.value == true %}
							Si
						{% else %}
							No
						{% endif %}
					</div>
				</div>
				<div class="small-12 medium-3 columns">
					<div align="center">
						{{ form_row(edit_form.childbed) }}
					</div>
				</div>
			</div>

			<div align="center">
				{{ form_row(edit_form.submit) }}
			</div>
			{{ form_rest(edit_form) }}
		</div>
	</div>
{{ form_end(edit_form) }}

{% if message is defined %}
	<div class="row">
		<div class="small-12 medium-6 medium-centered columns">
			<div data-alert class="alert-box warning">
			  {{ message }}
			  <a href="#" class="close">&times;</a>
			</div>
		</div>
	</div>
{% endif %}

<div class="row">
    <div class="small-6 medium-4 columns">
        <a href="{{ path('reserve_show', { 'id': entity.id }) }}" class="success button">
            Regresar
        </a>
    </div>
</div>
{% endblock %}
