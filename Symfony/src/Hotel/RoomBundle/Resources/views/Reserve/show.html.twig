{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Reserve</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Id usuario</th>
                <td>{{ entity.user.id }}</td>
            </tr>
            <tr>
                <th>Id habitacion</th>
                {% if entity.room is null %}
                    <td></td>
                {% else %}
                    <td><a href="{{ path('room_show', { 'id': entity.room.id }) }}">{{ entity.room.id }}</a></td>
                {% endif %}
            </tr>
            <tr>
                <th>Childbed</th>
                <td>{{ entity.childbed }}</td>
            </tr>
            <tr>
                <th>Entrydate</th>
                <td>{{ entity.entrydate|date('Y-m-d') }}</td>
            </tr>
            <tr>
                <th>Exitdate</th>
                <td>{{ entity.exitdate|date('Y-m-d') }}</td>
            </tr>
            <tr>
                <th>Roomcategory</th>
                <td>{{ entity.roomcategory }}</td>
            </tr>
            <tr>
                <th>Roomtype</th>
                <td>{{ entity.roomtype }}</td>
            </tr>
            <tr>
                <th>Roomstatus</th>
                <td>{{ entity.restatus }}</td>
            </tr>
            <tr>
                <th>Special</th>
                <td>{{ entity.special }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('reserve_admin') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('reserve_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
