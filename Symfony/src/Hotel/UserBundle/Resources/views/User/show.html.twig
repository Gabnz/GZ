{% extends '::foundation.base.html.twig' %}

{% block body -%}
<div class="cover-div"
    style="background-image:url({{ asset('bundles/img/login.jpg') }});">
</div>

{{ include('HotelUserBundle:User:user-topbar.html.twig') }}

<div class="title-div">
    <h1>Usuario</h1>
</div>

<div align="center">
    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Contrasena</th>
                <td>{{ entity.pass }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ entity.firstname }}</td>
            </tr>
            <tr>
                <th>Apellido</th>
                <td>{{ entity.lastname }}</td>
            </tr>
            <tr>
                <th>Correo</th>
                <td>{{ entity.email }}</td>
            </tr>
            <tr>
                <th>Genero</th>
                <td>{{ entity.gender }}</td>
            </tr>
            <tr>
                <th>Cedula</th>
                <td>{{ entity.idcard }}</td>
            </tr>
            <tr>
                <th>Fecha de nacimiento</th>
                <td>{{ entity.birthdate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Tarjeta de credito</th>
                <td>{{ entity.creditcard }}</td>
            </tr>
            <tr>
                <th>Cuenta</th>
                <td>{{ entity.account }}</td>
            </tr>
            <tr>
                <th>Nacionalidad</th>
                <td>{{ entity.nationality }}</td>
            </tr>
            <tr>
                <th>Rif</th>
                <td>{{ entity.rif }}</td>
            </tr>
            <tr>
                <th>Rol</th>
                <td>{{ entity.role }}</td>
            </tr>
        </tbody>
    </table>
</div>

<div align="center">
    <a href="{{ path('user_edit', { 'id': entity.id }) }}" class="button">
        Editar
    </a>
    {{ form(delete_form) }}
</div>

<ul class="record_actions">
    <li>
        <a href="{{ path('user') }}">
            Regresar a la lista
        </a>
    </li>
</ul>
{% endblock %}
