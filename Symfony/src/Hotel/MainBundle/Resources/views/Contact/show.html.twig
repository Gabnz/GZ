{% extends 'HotelMainBundle:Main:layout.html.twig' %}

{% block body -%}

<div class="cover-div" style="background-image:url({{ asset('bundles/img/login.jpg') }});">
</div>

{{ include('HotelUserBundle:User:user-topbar.html.twig') }}

<div class="title-div">
    <h1>Contacto {{entity.id}}</h1>
</div>

<div class="row">
    <div class="small-12 medium-6 medium-centered columns">
        <div class="panel">
            <div class="row">
                <div class="small-12 medium-6 columns">
                    <div align="center">
                        <label>Id</label>
                        {{ entity.id }}
                    </div>
                </div>
                <div class="small-12 medium-6 columns">
                    <div align="center">
                        <label>Correo electronico</label>
                        {{ entity.email }}
                    </div>
                </div>
            </div>
            <br/><br/>
            <div class="row">
                <div class="small-12 columns">
                    
                    <label>Mensaje</label>
                    {{ entity.message }}
                    
                </div>
            </div>
        </div>
    </div>
</div>
<br/>
<div align="center">
    {{ form(delete_form) }}
</div>

<div class="row">
    <div class="small-6 medium-4 columns">
        <a href="{{ path('contact') }}" class="success button">
            Regresar
        </a>
    </div>
</div>

{% endblock %}
